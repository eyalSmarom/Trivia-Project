<UserControl x:Class="Trivia_Client.Pages.Connect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Login.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Login" Source="/Pages/Login.xaml"></mui:Link>
                <mui:Link DisplayName="Sign Up" Source="/Pages/SignUp.xaml"></mui:Link>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
